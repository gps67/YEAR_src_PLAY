	SP=$(empty) $(empty)# SINGLE SPACE
	COLON=:# no  spaces

#	CONVERT
#	into PKG_CONFIG_PATH
#	from LIST_PKG_CONFIG_PATH

	PKG_CONFIG_PATH=$(subst $(SP),$(COLON),$(LIST_PKG_CONFIG_PATH):$(PKG_CONFIG_dirs))
	export PKG_CONFIG_PATH

##	# use multiple ways
##	#
