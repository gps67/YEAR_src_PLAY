###	LIST_RPATH

#	CONVERT
#	into VPATH
#	from LIST_VPATH

	VPATH+=$(subst $(SP),$(COLON),$(foreach sub,$(LIST_VPATH),$S/$(sub)))
	export VPATH

#	CONVERT
#	into CPLUS_INCLUDE_PATH
#	from LIST_CPLUS_INCLUDE_PATH

	CPLUS_INCLUDE_PATH+=$(subst $(SP),$(COLON),$(foreach sub,$(LIST_CPLUS_INCLUDE_PATH),$S/$(sub)))

