if false
then
	P 
	P PYTHONPATH 
fi
check_dir()
{
	if [ -d "$1/." ]
	then
		echo >&2 "# PASS # dir $1"
	else
		echo >&2 "# FAIL # dir $1"
	fi
}
check_dir $HOME
check_dir $HOME/audio
check_dir $HOME/audio/.cddb
check_dir $HOME/audio/.cddb/_regen
check_dir $HOME/audio/wav
check_dir $HOME/audio/mp3_V4
